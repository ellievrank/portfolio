---
const { title } = Astro.props;
---

<div class="section-header">
  <h2 class="section-title">{title}</h2>
  <div class="header-line"></div>
  <div class="header-square"></div>
</div>

<style>
  .section-header {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 40px;
    width: 100%;
  }
  .section-title {
    font-size: 24px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #1a3b28;
    margin: 0;
    white-space: nowrap;
  }
  .header-line {
    flex-grow: 1;
    height: 1px;
    background-color: #d1d1d1;
  }
  .header-square {
    width: 32px;
    height: 4px;
    background-color: #1a3b28;
  }
  @media (max-width: 768px) {
    .section-header {
      flex-wrap: wrap;
      gap: 10px;
      margin-bottom: 30px;
    }
  }
</style>
