---
import Layout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Nav.astro";

// --- DATA ---

const aboutCards = [
  {
    title: "Research & Legal Analysis",
    desc: "Legal research, issue identification, and clear synthesis of complex information.",
  },
  {
    title: "Policy & Systems Thinking",
    desc: "Understanding how legal, social, and economic systems affect access and outcomes.",
  },
  {
    title: "Communication & Writing",
    desc: "Clear, accessible writing for diverse audiences and complex systems.",
  },
];

const projects = [
  {
    title: "Open Justice - Coming Soon",
    img: "https://framerusercontent.com/images/XodgsX9fUzFedjsfP2rj9P91j0.png",
  },
  {
    title: "CIC Handbook - Coming Soon",
    img: "https://framerusercontent.com/images/SLVpuoBrmRsU7vMvW8MtwO6ETaU.png",
  },
  {
    title: "Tactify - Coming Soon",
    img: "https://framerusercontent.com/images/D3JJyJhS5fmlvYWobXrYd727u60.png",
  },
];

const experience = [
  {
    role: "Information Consultant",
    company: "Citizens Advice Bureau",
    date: "2025 — Present",
    desc: "Provide information and referral to members of the public across a wide range of matters via in person and phone advice line. Responsibilities include triaging enquiries, booking legal appointments, and managing reception duties. Currently undergoing training for assisting individuals with the Criminal Injuries Compensation process.",
  },
  {
    role: "Social Media Manager",
    company: "Lightbulb Skills",
    date: "2023 — Present",
    desc: "Manage and curate digital content for Lightbulb Skills, an organisation supporting individuals with disability. My role focuses on clear, accessible communication that promotes inclusion, community engagement, and awareness.",
  },
];

const education = [
  {
    role: "Bachelor of Law & Commerce",
    company: "Curtin University",
    date: "2025 - 2029",
    desc: "Building a foundation in law and commerce with a focus on access to justice, legal literacy, and community-facing legal support.",
  },
  {
    role: "High School Diploma",
    company: "Santa Maria College",
    date: "2020 - 2024",
    desc: "Developed strong written communication, critical thinking, and ethical reasoning skills in preparation for tertiary legal studies.",
  },
];
---

<Layout title="Ellie Vrankovich - Portfolio">
  <Navbar />

  <section id="home" class="container hero">
    <div class="hero-top-text">Pursuing Passions</div>

    <div class="hero-sandwich">
      <h1 class="sandwich-text top">ELLIE</h1>

      <div class="sandwich-image-wrapper">
        <img
          src="/assets/portrait.jpg"
          alt="Ellie Vrankovich"
          alt="Ellie Vrankovich"
        />
      </div>

      <h1 class="sandwich-text bottom">VRANKOVICH</h1>
    </div>

    <p class="hero-desc">
      A Law and Commerce student committed to improving access to justice
      through clear communication, community support, and practical solutions.
    </p>
  </section>

  <section id="about" class="container section-padding">
    <div class="section-header">
      <h2 class="section-title">About</h2>
      <div class="header-line"></div>
      <div class="header-square"></div>
    </div>

    <div class="section-intro">
      My work sits at the intersection of law, technology, and accessibility.
      I’m passionate about creating clear, practical resources that help people
      better understand their rights.
    </div>

    <div class="about-cards">
      {
        aboutCards.map((card) => (
          <div class="card">
            <h3>{card.title}</h3>
            <p>{card.desc}</p>
          </div>
        ))
      }
    </div>
  </section>

  <section id="projects" class="container section-padding">
    <div class="section-header">
      <h2 class="section-title">Projects</h2>
      <div class="header-line"></div>
      <div class="header-square"></div>
    </div>

    <div class="project-grid">
      {
        projects.map((project) => (
          <a href="#" class="project-item">
            <div class="project-img">
              <img src={project.img} alt={project.title} />
            </div>
            <div class="project-title">{project.title}</div>
          </a>
        ))
      }
    </div>
  </section>

  <section id="experience" class="container section-padding">
    <div class="section-header">
      <h2 class="section-title">Experience</h2>
      <div class="header-line"></div>
      <div class="header-square"></div>
    </div>

    <div class="experience-list">
      {
        experience.map((item) => (
          <div class="experience-item">
            <div>
              <div class="role-title">{item.role}</div>
              <div class="company-name">{item.company}</div>
              <span class="role-dates">{item.date}</span>
            </div>
            <div class="role-desc">{item.desc}</div>
          </div>
        ))
      }
    </div>
  </section>

  <section id="education" class="container section-padding">
    <div class="section-header">
      <h2 class="section-title">Education</h2>
      <div class="header-line"></div>
      <div class="header-square"></div>
    </div>

    <div class="experience-list">
      {
        education.map((item) => (
          <div class="experience-item">
            <div>
              <div class="role-title">{item.role}</div>
              <div class="company-name">{item.company}</div>
              <span class="role-dates">{item.date}</span>
            </div>
            <div class="role-desc">{item.desc}</div>
          </div>
        ))
      }
    </div>
  </section>

  <section id="contact" class="container section-padding">
    <div class="section-header">
      <h2 class="section-title">Contact</h2>
      <div class="header-line"></div>
      <div class="header-square"></div>
    </div>

    <div class="contact-layout">
      <div class="contact-info">
        <p>
          If you’d like to collaborate, discuss research, or talk about
          access-to-justice initiatives, feel free to get in touch.
        </p>
        <div class="contact-links">
          <br />
          <strong>Perth, Western Australia</strong><br /><br />
          <a href="mailto:ellie@ellievrankovich.com"
            >ellie@ellievrankovich.com</a
          >
          <a href="#">www.ellievrankovich.com</a>
        </div>
      </div>

      <form class="contact-form">
        <input type="text" placeholder="Name" />
        <input type="email" placeholder="Email" />
        <textarea rows="5" placeholder="Message"></textarea>
        <button type="button">Send Message</button>
      </form>
    </div>
  </section>

  <footer>
    <div class="container">
      <p>
        &copy; Designed and Built by Ellie Vrankovich 2025. All rights reserved.
      </p>
    </div>
  </footer>
</Layout>

<style>
  /* --- HERO SANDWICH LAYOUT --- */
  .hero {
    min-height: auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-top: 140px;
    padding-top: 100px;
    padding-bottom: 150px;
  }

  .hero-top-text {
    font-size: 12px;
    letter-spacing: 1px;
    color: #666;
    margin-top: 100px;
    margin-bottom: 20px;
    text-transform: uppercase;
  }

  .hero-sandwich {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    max-width: 100%;
    overflow: hidden;
  }

  .sandwich-text {
    font-size: clamp(60px, 10vw, 180px);
    font-weight: 800;
    line-height: 0.8;
    color: #1a3b28;
    text-transform: uppercase;
    margin: 0;
    letter-spacing: -0.04em;
  }

  .sandwich-text.top {
    z-index: 1;
    position: relative;
  }

  .sandwich-image-wrapper {
    z-index: 2;
    position: relative;
    width: 280px;
    height: 380px;
    border-radius: 120px;
    overflow: hidden;
    margin-top: -70px;
    margin-bottom: -70px;
    pointer-events: none;
  }

  .sandwich-image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .sandwich-text.bottom {
    z-index: 3;
    position: relative;
  }

  .hero-desc {
    margin-top: 60px;
    font-size: 18px;
    color: #666;
    max-width: 500px;
    line-height: 1.6;
  }

  /* --- SECTION HEADERS (LINE STYLE) --- */
  .section-header {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 40px;
    width: 100%;
  }

  .section-title {
    font-size: 24px;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #1a3b28;
    margin: 0;
    white-space: nowrap;
  }

  .header-line {
    flex-grow: 1;
    height: 1px;
    background-color: #d1d1d1;
  }

  .header-square {
    width: 32px;
    height: 4px;
    background-color: #1a3b28;
  }

  .section-intro {
    font-size: 28px;
    font-weight: 500;
    max-width: 800px;
    line-height: 1.4;
    margin-bottom: 60px;
    color: #111;
  }

  /* --- STANDARD COMPONENT STYLES --- */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .section-padding {
    padding-top: 120px;
    padding-bottom: 120px;
  }

  /* About Grid */
  .about-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
  }

  .card {
    background: #f9f9f9;
    padding: 32px;
    border-radius: 12px;
    border: 1px solid #e5e5e5;
  }

  .card h3 {
    font-size: 18px;
    margin-bottom: 12px;
    font-weight: 600;
  }

  .card p {
    font-size: 15px;
    color: #666;
  }

  /* Project Grid */
  .project-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
  }

  .project-item {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .project-img {
    background-color: #eee;
    aspect-ratio: 4/3;
    border-radius: 12px;
    margin-bottom: 16px;
    overflow: hidden;
  }

  .project-img img {
    width: 100%;
    height: 100%;
    transition: transform 0.3s ease;
    object-fit: cover;
  }

  .project-item:hover .project-img img {
    transform: scale(1.03);
  }

  .project-title {
    font-size: 16px;
    font-weight: 600;
  }

  /* Marquee */
  .marquee-wrapper {
    overflow: hidden;
    background: #fff;
  }

  .marquee-static {
    font-size: 80px;
    font-weight: 800;
    white-space: nowrap;
    color: #f0f0f0;
    text-transform: uppercase;
    line-height: 1;
    padding: 40px 0;
    user-select: none;
    -webkit-text-stroke: 1px #ddd;
  }

  /* Experience List */
  .experience-list {
    display: flex;
    flex-direction: column;
  }

  .experience-item {
    display: grid;
    grid-template-columns: 1fr 2fr;
    padding: 40px 0;
    border-top: 1px solid #e5e5e5;
  }

  .role-title {
    font-size: 20px;
    font-weight: 600;
  }

  .company-name {
    font-size: 16px;
    color: #666;
    margin-bottom: 8px;
  }

  .role-dates {
    font-size: 14px;
    color: #666;
    margin-bottom: 16px;
    display: block;
  }

  .role-desc {
    font-size: 16px;
    color: #111;
    line-height: 1.6;
  }

  /* Contact */
  .contact-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
  }

  .contact-info p {
    font-size: 24px;
    margin-bottom: 24px;
    line-height: 1.4;
  }

  .contact-links a {
    display: block;
    font-size: 18px;
    text-decoration: underline;
    margin-bottom: 8px;
    color: inherit;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  input,
  textarea {
    width: 100%;
    padding: 16px;
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    font-family: inherit;
    font-size: 16px;
    background: #f9f9f9;
  }

  button {
    padding: 16px 32px;
    background: #111;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    align-self: flex-start;
  }

  footer {
    padding: 40px 0;
    border-top: 1px solid #e5e5e5;
    margin-top: 80px;
    font-size: 14px;
    color: #666;
  }

  /* Responsive - Phone Styles */
  @media (max-width: 768px) {
    .hero-main,
    .project-grid,
    .contact-layout,
    .experience-item {
      grid-template-columns: 1fr;
    }

    .sandwich-text {
font-size: clamp(32px, 12vw, 60px); 
      line-height: 0.85;
    }

.hero {
      margin-top: 20px; 
      padding-top: 10px; 
      padding-bottom: 40px;

    .hero-top-text {
      margin-top: 10px;
      margin-bottom: 10px;
    }

    .section-padding {
      padding-top: 30px;
      padding-bottom: 30px;
    }

    .sandwich-image-wrapper {
      width: 140px;
      height: 200px;
      margin-top: -20px;
      margin-bottom: -20px;
      border-radius: 70px;
    }

    .section-header {
      flex-wrap: wrap;
      gap: 10px;
      margin-bottom: 30px;
    }

    .section-intro {
      font-size: 18px;
      margin-bottom: 30px;
    }
  }
</style>
