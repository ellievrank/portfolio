---
// 1. Imports
import Layout from "../layouts/BaseLayout.astro";
import Navbar from "../components/layout/Nav.astro";
import Footer from "../components/layout/Footer.astro";
import HomeHero from "../components/page-elements/Hero.astro";
import Story from "../components/page-elements/Story.astro";
import SectionHeader from "../components/layout/SectionHeader.astro";
import ExperienceItem from "../components/page-elements/ExperienceItem.astro";
import Contact from "../components/page-elements/Contact.astro";

import { aboutCards, projects, experience, education } from "../data";
---

<Layout title="Ellie Vrankovich - Personal Site">
  <Navbar />
  <HomeHero />

  <section id="about" class="container section-padding">
    <SectionHeader title="About" />
    <div class="section-intro">
      My work sits at the intersection of law, technology, and accessibility.
      Iâ€™m passionate about creating clear, practical resources that help people
      better understand their rights.
    </div>
    <Story />
    <div class="about-cards">
      {
        aboutCards.map((card) => (
          <div class="card">
            <h3>{card.title}</h3>
            <p>{card.desc}</p>
          </div>
        ))
      }
    </div>
  </section>

  <section id="projects" class="container section-padding">
    <SectionHeader title="Projects" />
    <div class="project-grid">
      {
        projects.map((project) => (
          <a
            href={project.href || "#"}
            class="project-item"
            target={project.href?.startsWith("http") ? "_blank" : "_self"}
          >
            <div class="project-img">
              <img src={project.img} alt={project.title} />
            </div>
            <div class="project-title">{project.title}</div>
            {project.desc && <p class="project-desc">{project.desc}</p>}
          </a>
        ))
      }
    </div>
  </section>

  <section id="experience" class="container section-padding">
    <SectionHeader title="Experience" />
    <div class="experience-list">
      {experience.map((item) => <ExperienceItem {...item} />)}
    </div>
  </section>

  <section id="education" class="container section-padding">
    <SectionHeader title="Education" />
    <div class="experience-list">
      {education.map((item) => <ExperienceItem {...item} />)}
    </div>
  </section>

  <section id="contact" class="container section-padding">
    <SectionHeader title="Contact" />
    <Contact />
  </section>

  <Footer />
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }
  .section-padding {
    padding-top: 100px;
    padding-bottom: 100px;
  }
  .section-intro {
    font-size: 28px;
    font-weight: 500;
    max-width: 800px;
    line-height: 1.4;
    margin-bottom: 60px;
    color: #111;
  }

  .about-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
  }
  .card {
    background: #f9f9f9;
    padding: 32px;
    border-radius: 12px;
    border: 1px solid #e5e5e5;
  }
  .card h3 {
    font-size: 18px;
    margin-bottom: 12px;
    font-weight: 600;
  }
  .card p {
    font-size: 15px;
    color: #666;
  }

  .project-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 40px;
  }
  .project-item {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  .project-img {
    background-color: #eee;
    aspect-ratio: 4/3;
    border-radius: 12px;
    margin-bottom: 16px;
    overflow: hidden;
  }
  .project-img img {
    width: 100%;
    height: 100%;
    transition: transform 0.3s ease;
    object-fit: cover;
  }
  .project-item:hover .project-img img {
    transform: scale(1.03);
  }
  .project-title {
    font-size: 16px;
    font-weight: 600;
  }
  .project-desc {
    font-size: 15px;
    color: #666;
    margin-top: 8px;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .project-grid {
      grid-template-columns: 1fr;
    }
    .section-padding {
      padding-top: 50px;
      padding-bottom: 50px;
    }
    .section-intro {
      font-size: 18px;
      margin-bottom: 30px;
    }
  }
</style>
